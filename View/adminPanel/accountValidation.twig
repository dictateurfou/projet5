{% extends 'layer.twig' %}

{% block content %}
	 <div class=" accountValidation">
			<ul>
				{% if validation != false %}
				    {% for user in validation %}

					    	<li class="row"><span class="user-name col-xs-12 col-md-4" >{{user.getName()}}</span>
					    		<div class="btn-validation col-xs-12 col-md-4">
						    		<a href="/adminPanel/accountValidation/true/{{user.getId()}}" class="btn btn-success btn-valid" role="button">Valider</a>
						    		<a href="/adminPanel/accountValidation/false/{{user.getId()}}" class="btn btn-danger btn-valid" role="button" >Refuser</a>
						    	</div>
					    	</li>
					{% endfor %}
				{% endif %}
			</ul>
	</div>
{% endblock %}