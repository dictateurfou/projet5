{% extends 'defaultLayer.twig' %}
{% block content %}

<div class="container">

  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      {% for article in articles %}
            <div class="post-preview">
              <a href="/post/view/{{article.getId()}}">
                <h2 class="post-title">
                  {{article.getTitle()}}
                </h2>
                <p class="post-subtitle">
                  {{article.getContent()|slice(0, 200)}} ...
                </p>
              </a>
              <p class="post-meta">Poster par
                <a href="#">{{article.getAuthor().getName()}}</a>
                le {{article.getCreatedAt()}}</p>
                {% if right['edit'] == true %}
                  <a href="/post/edit/{{article.getId()}}"><button type="button" class="btn btn-primary">Modifier</button></a>
                {% endif %}
                {% if right['delete'] == true %}
                  <a href="/post/delete/{{article.getId()}}"><button type="button" class="btn btn-danger">Suprimer</button></a>
                {% endif %}
            </div>
            <hr>
      {% endfor %}
            <!-- Pager -->
            <div class="clearfix">
              <a class="btn btn-primary float-right" href="#">Ancien Posts &rarr;</a>
            </div>
          </div>
  </div>
</div>
{% endblock %}
