<form action="?account&action=editProfile&subAction=changePassword" method="POST">


        <div class="control-group row justify-content-md-center">
          <div class="form-group floating-label-form-group controls">
            <label>Password</label>
            <input name="password" type="password" class="form-control" placeholder="Password" id="password" required data-validation-required-message="Entrez votre mot de passe">
            <p class="help-block text-danger"></p>
          </div>
        </div>

        <br>
        <div id="success"></div>
        <div class="form-group row justify-content-md-center">
          <button type="submit" class="btn btn-primary" id="changePassword">Valider</button>
        </div>
</form>

<a  class="row justify-content-md-center" href="?account&action=editProfile&subAction=delete"><button class="btn btn-danger" id="changePassword">Suprimer</button></a>